# Environment Variables Template
# Copy this file to .env and fill in the actual values

###############################################
# Server .env template (used on EC2 by compose)
###############################################

# Docker Hub registry (must include trailing slash)
DOCKER_REGISTRY=<dockerhub-username>/
# Image tag injected by CI/CD (branch-sha)
VERSION=

# Database (RDS)
DB_URL=
DB_USERNAME=
DB_PASSWORD=

# Redis (prod requires password)
REDIS_PASSWORD=

# JWT secret
JWT_SECRET=

# Optional (for dev phpMyAdmin against RDS)
RDS_HOST=
RDS_PORT=3306

# Database Configuration
DB_URL=jdbc:mysql://mysql:3306/aningcall_prod?useSSL=true&serverTimezone=UTC
DB_USERNAME=aningcall
DB_PASSWORD=your_secure_database_password
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=aningcall_prod
MYSQL_USER=aningcall
MYSQL_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your-very-long-jwt-secret-key-at-least-256-bits-long-for-production-use-change-this
JWT_EXPIRATION=86400000

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# SSL (if using Let's Encrypt or custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/prod.proproject.my.crt
SSL_KEY_PATH=/etc/nginx/ssl/prod.proproject.my.key

# Monitoring (optional)
ENABLE_MONITORING=true
